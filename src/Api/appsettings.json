{
  "Mongo": {
    "DatabaseUri": "mongodb://set-automatically-when-deployed/admin?authSource=$external&authMechanism=MONGODB-AWS",
    "DatabaseName": "livestock-auth"
  },
  "ConnectionStrings": {
    "Auth": "User ID=postgres;Password=postgres;Host=localhost;Database=livestock_auth;"
  },
  "AllowedHosts": "*",
  "TraceHeader": "x-cdp-request-id",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog"
        }
      }
    ]
  },
  "PolledServices" : {
    "AzureB2CSyncService": {
      "ServiceType": "Livestock.Auth.Services.AzureB2CSyncService",
      "InterfaceType": "Livestock.Auth.Services.IAzureB2CSyncService",
      "ConfigurationType": "Livestock.Auth.Services.Config.AzureB2CSyncServiceConfiguration",
      "Description": "Service that will fetch users from Azure B2C and sync them to the Auth DB",
      // "CronSchedule": "0 0/1 * * * ?",
      "CronSchedule": "*/30 * * * * ?"
    },
    "KrdsSyncService": {
      "ServiceType": "Livestock.Auth.Services.KrdsSyncService",
      "InterfaceType": "Livestock.Auth.Services.IKrdsSyncService",
      "ConfigurationType": "Livestock.Auth.Services.Config.KrdsSyncServiceConfiguration",
      "Description": "Service that will update the Auth DB and Azure B2C with details from KRDS",
      // "CronSchedule": "0 0/1 * * * ?",
      "CronSchedule": "*/30 * * * * ?"
    }
  }
}
